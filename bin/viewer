#!/usr/bin/env ruby

require 'erb'

content = $stdin.readlines.join

f = File.open("#{File.dirname(__FILE__)}/../viewer/viewer.html", "w")
f.write ERB.new(File.open("#{File.dirname(__FILE__)}/../viewer/viewer.html.erb").read).result(binding)
f.close

system("open #{File.dirname(__FILE__)}/../viewer/viewer.html")